{
  "extends": "@tsconfig/recommended/tsconfig.json",
  "compilerOptions": {
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "target": "esnext",
    "rootDir": ".",
    "outDir": "dist",
    "declaration": true,
    "sourceMap": true,
    "jsx": "react",
    "allowJs": true,
    "declarationMap": true,
    "types": [
      "react",
      "node"
    ],
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "paths": {
      "@testing-library/react-render-stream": [
        "./src/index.ts"
      ]
    }
  },
  "include": [
    "src",
    "tests"
  ]
}